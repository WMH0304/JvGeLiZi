<Window x:Class="Zxing_二维码条形码_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zxing_二维码条形码_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel  Background="Gray">
            <Image Width="300"  Height="300"  x:Name="ewm"></Image>
        </StackPanel>

        <StackPanel Background="Gray" Grid.Row="1">
            <Image  Width="500" Height="200" Margin="10,20,0,0" x:Name="txm"></Image>
            
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <TextBlock Text="想要输入的" VerticalAlignment="Center" FontSize="20"></TextBlock>
            <TextBox x:Name="tb_content" Width="200" VerticalScrollBarVisibility="Auto"></TextBox>
            <Button Grid.Row="2" Width="100" x:Name="btn" Click="btn_Click" Content="生成" >
            </Button>
           
        </StackPanel>
        



    </Grid>
</Window>
