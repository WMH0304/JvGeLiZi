<Window x:Class="WPF_Test.Tools.Strip"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Test.Tools"
        mc:Ignorable="d"
        Title="条形" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>

        </Grid.RowDefinitions>

        <StackPanel Height="auto" Width="auto" >
            <Border  x:Name="cont" Width="500" Height="100"  Margin="10">

                <Image  x:Name="cont1"></Image>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox Height="30" Width="500" Name="tb"/>
            <Button Height="30" Width="50" Margin ="10,0,0,0" Click="Button_Click"></Button>
            
        </StackPanel>
    </Grid>
</Window>
