<Window x:Class="WPFUI_test.Test.ButtonBrakgroud"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI_test.Test"
        mc:Ignorable="d"
        Title="ButtonBrakgroud" Height="450" Width="800">
    <Grid>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent" BorderBrush="White">
            <Grid>
                <Polygon Points="100,25 125,0 200,25 125,50" Fill="LightBlue"/>
                <Polygon Points="100,25 75,0 0,25 75,50" Fill="LightPink"/>
            </Grid>
        </Button>

    </Grid>
</Window>
