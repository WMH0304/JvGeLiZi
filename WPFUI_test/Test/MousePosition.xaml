<Window x:Class="WPFUI_test.Test.MousePosition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI_test.Test"
        mc:Ignorable="d"
        Title="MousePosition" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Rectangle Name="rect" Fill="LightBlue" MouseMove="rect_MouseMove" MouseDown="rect_MouseDown" PreviewMouseDown="rect_PreviewMouseDown"></Rectangle>
        <Button Grid.Row="1" Name="bt_cmd" Click="bt_cmd_Click">点我试试</Button>
        <TextBlock Name="tb_lable" Grid.Row="2"/>

    </Grid>
</Window>
